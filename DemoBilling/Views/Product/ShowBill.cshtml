@model BillViewModel

<h2>Bill Details</h2>

<input type="text" value="BillId"/>
<p><strong>Bill ID:</strong> @Model.BillId</p>
<p><strong>Customer Name:</strong> @Model.CustomerName</p>

<table>
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Products.Count; i++)
        {
            <tr>
                <td>@Model.Products[i].Name</td>
                <td>@Model.Quantities[i]</td>
            </tr>
        }
    </tbody>
</table>

<p><strong>Total:</strong> @Model.Total</p>


